{
  "expo": {
    "name": "Exercise Timer - Workout Timer",
    "slug": "exercise-timer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "exercise-timer",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "description": "Professional exercise timer with animated guides. 40s work, 20s rest intervals with sound cues and customizable workouts.",
    "privacy": "public",
    "platforms": ["ios", "android", "web"],
    "splash": {
      "image": "./assets/images/splash-image.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.exercisetimer.app",
      "buildNumber": "1",
      "icon": "./assets/images/icon.png",
      "infoPlist": {
        "NSHealthShareUsageDescription": "This app helps you track workout sessions.",
        "NSHealthUpdateUsageDescription": "This app helps you track workout sessions."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.exercisetimer.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-image.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1a1a2e"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
